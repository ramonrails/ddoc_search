{
  "class": "Document_{env}",
  "description": "Documents for multi-tenant search. Note: {env} should be replaced with the Rails environment (development, test, production)",
  "vectorizer": "none",
  "properties": [
    {
      "name": "tenant_id",
      "dataType": ["int"],
      "description": "Tenant identifier for multi-tenancy"
    },
    {
      "name": "title",
      "dataType": ["text"],
      "description": "Document title",
      "tokenization": "word"
    },
    {
      "name": "content",
      "dataType": ["text"],
      "description": "Document content",
      "tokenization": "word"
    },
    {
      "name": "created_at",
      "dataType": ["date"],
      "description": "Document creation timestamp"
    },
    {
      "name": "metadata",
      "dataType": ["object"],
      "description": "Additional metadata"
    }
  ]
}
